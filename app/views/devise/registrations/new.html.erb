<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="text-3xl font-bold mb-4 text-center">Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :name, class: "form-label mb-1" %>
              <%= f.text_field :name, autofocus: true, class: "form-control rounded-md" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label mb-1" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-md" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label mb-1" %>
              <% if @minimum_password_length %>
                <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-md" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label mb-1" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-md" %>
            </div>

            <div class="text-center">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block mt-3" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
