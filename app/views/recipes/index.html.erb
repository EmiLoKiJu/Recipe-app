<section id='recipes' class="flex flex-col justify-center bg-gray-100">
  <div class="flex flex-col items-center">
    <% @recipes.each do |recipe| %>
      <div class="max-w-4xl w-11/12 m-4 p-6 bg-white border border-gray-200 rounded-lg shadow">
        <div class="p-4 space-y-4">
          <%= link_to recipe_path(recipe) do %>
            <p class="mb-3 text-gray-700"><%= recipe.name %></p>
          <% end %>
          <p class="mb-3 text-gray-700"><%= recipe.description %></p>
          <%= button_to 'Remove', recipe_path(recipe), method: :delete, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center my-8">
    <%= link_to 'Add Recipe', new_recipe_path, class: "text-green-700 hover:text-white border border-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"  %>
  </div>
</section>
