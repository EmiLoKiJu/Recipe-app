<h2>Add Food to Recipe</h2>

<%= form_for @recipe_food do |f| %>
  <div class="field">
    <%= f.label :food_id, 'Food' %>
    <%= f.collection_select :food_id, Food.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <%= f.hidden_field :recipe_id %>

  <div class="actions">
    <%= f.submit 'Add Food', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', :back, class: 'btn btn-secondary' %>
