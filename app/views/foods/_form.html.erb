<div class='text-center'>
  <h1 class="text-3xl font-bold my-8">Add a new Food</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <%= form_with(model: @food, url: foods_path, local: true, class: "form-horizontal") do |form| %>
      <div class="form-group">
        <%= form.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Food Name" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :measurement_unit, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_field :measurement_unit, class: "form-control", placeholder: "Enter Measurement Unit" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :price, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.number_field :price, class: "form-control", placeholder: "Enter Price" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :quantity, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.number_field :quantity, class: "form-control", placeholder: "Enter Quantity" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit 'Create Food', class: "btn btn-primary" %>
          <%= link_to 'Back', foods_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>